<%= form_tag send_new_venue_email_path do %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= label_tag 'name', 'Venue Name' %>
        <%= text_field_tag :name, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag 'link', 'Their website address' %>
        <%= text_field_tag :link, nil, class: "form-control" %>
      </div>
      <!--
    <div class="form-group">
      <%= label_tag 'address', 'address' %>
      <%= text_field_tag :address, nil, class: "form-control" %>
    </div>
    -->
      <div class="form-group">
        <%= label_tag :venue_type %>
        <%= select_tag :venue_type,
          options_for_select(@venue.all_venue_types, 0), 
          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :smoking_policy %>
        <%= select_tag :smoking_policy, options_for_select(@venue.all_smoking_policies, 0), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag 'description', 'Describe the place (optional)' %>
        <%= text_area_tag :description, nil, class: "form-control", rows: 3 %>
      </div>

      <div class="form-group">
        <%= label_tag 'Email', "Your email address (Don't worry, spam is for losers)" %>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>

    </div>
    <div class="col-md-6">
      <div id="map-search"></div>
      <div class="col-xs-6">
        <%# <%= label_tag 'latitude', 'Lat:' %>
        <%= text_field_tag :latitude, nil, {id: "input-lat", 
                                            class: "form-control",
                                            placeholder: "Latitude",
                                            readonly: "readonly"} %>
      </div>

      <div class="col-xs-6">
        <%# <%= label_tag 'longitude', 'Lng:' %>
        <%= text_field_tag :longitude, nil, {id: "input-lng", 
                                             class: "form-control",
                                             placeholder: "Longitude",
                                             readonly: "readonly"} %>
      </div>
    </div>
  </div>

  <%= submit_tag "Submit", id: "submit", class: "btn btn-primary" %>
<% end %>
