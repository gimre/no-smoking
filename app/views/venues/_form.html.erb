    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :venue_type %><br>
    <%= select_tag :venue_type, options_for_select(@venue.all_venue_types, 1) %>
  </div>
  <div class="field">
    <%= f.label :smoking_policy %><br>
    <%= select_tag :smoking_policy, options_for_select(@venue.all_smoking_policies, 1) %>
