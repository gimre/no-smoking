<% provide(:title, "All Venues") %>

<div class="col-md-3 max-height">
  <h1>No smoking</h1>
  <p>The National Institute For Cancer Prevention At Parties</p>

  <div class="scrollable">
    <ul class="list-group venues">
      <li class="list-group-item">
      <% @venues.each do |venue| %>
        <h4> 
          <%= link_to venue.name, venue %> 
          <small> - <%= venue.readable_venue_type %></small>
        </h4>
        <%= link_to "#{venue.link}", "http://#{venue.link}", target: "_blank" %>
        <!-- <td><%= link_to 'Edit', edit_venue_path(venue), id: "edit_#{venue.id}" %></td> -->
        <!-- <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy_#{venue.id}" %></td> -->
      <% end %>
      </li>
    </ul>
  </div>
</div>

<div id="map-canvas"></div>
