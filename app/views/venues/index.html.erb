<% provide(:title, "All Venues") %>

<h1>Listing venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Link</th>
      <th>Address</th>
      <th>Venue type</th>
      <th>Smoking policy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="venues">
    <tbody>
      <% @venues.each do |venue| %>
        <tr>
          <td><%= venue.name %></td>
          <td><%= venue.latitude %></td>
          <td><%= venue.longitude %></td>
          <td><%= link_to "#{venue.link}", "http://#{venue.link}", target: "_blank" %></td>
          <td><%= venue.address %></td>
          <td><%= venue.readable_venue_type %></td>
          <td><%= venue.smoking_policy %></td>
          <td><%= link_to 'Show', venue %></td>
          <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
          <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>
